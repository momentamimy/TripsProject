<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ProjectITI.tripsproject">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.Trips_History.Notes.showNotes"
            android:theme="@style/AppTheme.CustomeThemeForPopWindow">
        </activity>

        <activity android:name=".ui.Trips_History.Alert.deleteTrip"
            android:theme="@style/AppTheme.CustomeThemeForPopWindow">
        </activity>

        <activity
            android:name=".HomeScreen"
            android:label="@string/title_activity_home_screen"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".SplashScreen"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LoginSignup_Activity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".AddTrip" />

        <receiver android:name=".AlertReceiver" />
    </application>

</manifest>